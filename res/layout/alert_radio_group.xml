<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/alert_dialog_file_title"
    >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/alert_title"
        style="@style/alert_dialog_title_text"
        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        >
        <RadioGroup
            android:id="@+id/alert_radio_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="42px"
            android:layout_marginTop="20px"
            >
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/ALERT_DIALOG_OK"
            style="@style/alert_dialog_button"
            android:background="@drawable/alert_dialog_ok"
            android:layout_marginLeft="152px"
            />
        <ImageButton
            android:id="@+id/ALERT_DIALOG_CANCEL"
            style="@style/alert_dialog_button"
            android:background="@drawable/alert_dialog_cancel"
            android:gravity="right"
            android:layout_marginRight="30px"
            />
    </LinearLayout>
</LinearLayout>
