<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/alert_dialog_file_title"
    >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/alert_title"
        style="@style/alert_dialog_title_text"
        android:text="Days"
        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="10px"
        >
        <CheckBox
            android:id="@+id/check_box_monday"
            style="@style/check_box"
            android:text="Monday"
            />
        <CheckBox
            android:id="@+id/check_box_tuesday"
            style="@style/check_box"
            android:text="Tuesday"
            />
        <CheckBox
            android:id="@+id/check_box_wednesday"
            style="@style/check_box"
            android:text="Wednesday"
            />
        <CheckBox
            android:id="@+id/check_box_thursday"
            style="@style/check_box"
            android:text="Thursday"
            />
        <CheckBox
            android:id="@+id/check_box_friday"
            style="@style/check_box"
            android:text="Friday"
            />
        <CheckBox
            android:id="@+id/check_box_saturday"
            style="@style/check_box"
            android:text="Saturday"
            />
        <CheckBox
            android:id="@+id/check_box_sunday"
            style="@style/check_box"
            android:text="Sunday"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10px"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/ALERT_DIALOG_OK"
            style="@style/alert_dialog_button"
            android:background="@drawable/alert_dialog_done"
            android:gravity="right"
            android:layout_marginRight="30px"
            />
    </LinearLayout>
</LinearLayout>
