<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_layout_file_title"
    >
    <LinearLayout 
        style="@style/linear_layout_title"
        >
        <ImageButton
            android:id="@+id/input_number_return_button"
            style="@style/back_button"
            />
        <TextView
            android:id="@+id/title_text"
            style="@style/text_view_title"
            android:text="Choose your PIN"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        >
        <TextView
            android:id="@+id/tips_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Confirm your PIN"
            android:textColor="#7D7D7D"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10px"
            />
        <ImageView
            android:id="@+id/input_text"
            android:layout_width="fill_parent"
            android:layout_height="45px"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pin_number_line"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:gravity="bottom"
        android:layout_weight="1"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#7D7D7D"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/btn_number_cancel"
                android:src="@drawable/pin_number_cancel"
                android:layout_width="240px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#00000000"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pin_number_j"
                />
            <ImageButton
                android:id="@+id/btn_number_next"
                android:src="@drawable/pin_number_continue_black"
                android:layout_width="240px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#00000000"
                android:clickable="false"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/linear_layout_number"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/btn_number_1"
                android:background="@drawable/pin_number_1"
                style="@style/input_number_button_num"
                />
            <ImageButton
                android:id="@+id/btn_number_2"
                android:background="@drawable/pin_number_2"
                style="@style/input_number_button_num"
                />
            <ImageButton
                android:id="@+id/btn_number_3"
                android:background="@drawable/pin_number_3"
                style="@style/input_number_button_num"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/linear_layout_number"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/btn_number_4"
                android:background="@drawable/pin_number_4"
                style="@style/input_number_button_num"
                />
            <ImageButton
                android:id="@+id/btn_number_5"
                android:background="@drawable/pin_number_5"
                style="@style/input_number_button_num"
                />
            <ImageButton
                android:id="@+id/btn_number_6"
                android:background="@drawable/pin_number_6"
                style="@style/input_number_button_num"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/linear_layout_number"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/btn_number_7"
                android:background="@drawable/pin_number_7"
                style="@style/input_number_button_num"
                />
            <ImageButton
                android:id="@+id/btn_number_8"
                android:background="@drawable/pin_number_8"
                style="@style/input_number_button_num"
                />
            <ImageButton
                android:id="@+id/btn_number_9"
                android:background="@drawable/pin_number_9"
                style="@style/input_number_button_num"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/linear_layout_number"
            android:gravity="center"
            android:layout_marginBottom="20px"
            >
            <ImageButton
                android:id="@+id/btn_number_d"
                android:background="@drawable/pin_number_d"
                style="@style/input_number_button_num"
                />
            <ImageButton
                android:id="@+id/btn_number_0"
                android:background="@drawable/pin_number_0"
                style="@style/input_number_button_num"
                />
            <ImageButton
                android:id="@+id/btn_number_n"
                android:background="@drawable/pin_number_next"
                style="@style/input_number_button_num"
                android:clickable="false"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
